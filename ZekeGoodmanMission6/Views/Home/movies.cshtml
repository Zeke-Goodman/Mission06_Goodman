@{
    ViewData["Title"] = "Get to know Joel";
}
@model Movie

<div class="container">
    <!-- Movie submission form -->
    <form method="post" class="needs-validation" novalidate>

        <input type="hidden" asp-for="MovieId"/>

        <div class="mb-3">
            <label asp-for="CategoryId" class="form-label">Movie Category: </label>
            <select asp-for="CategoryId">
                @foreach (Category cat in ViewBag.CategoryList)
                {
                    <option value="@cat.CategoryId">@cat.CategoryName</option>
                }
            </select>
            <div class="invalid-feedback">Please enter the movie category.</div>
        </div>
        <div class="mb-3">
            <label asp-for="Title" class="form-label">Movie Title: </label>
            <input asp-for="Title" type="text" class="form-control" required />
            <div class="invalid-feedback">Please enter the movie title.</div>
        </div>
        <div class="mb-3">
            <label asp-for="Year" class="form-label">Movie Year: </label>
            <input asp-for="Year" type="text" class="form-control" required />
            <div class="invalid-feedback">Please enter the movie year.</div>
        </div>
        <div class="mb-3">
            <label asp-for="Director" class="form-label">Movie Director: </label>
            <input asp-for="Director" type="text" class="form-control" required />
            <div class="invalid-feedback">Please enter the movie director.</div>
        </div>
        <div class="mb-3">
            <label asp-for="Rating" class="form-label">Movie Rating: </label>
            <select asp-for="Rating" class="form-select" required>
                <option value="">Select Rating</option>
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
            </select>
            <div class="invalid-feedback">Please select the movie rating.</div>
        </div>
        <div class="mb-3">
            <label asp-for="Edited" class="form-label">Edited: </label>
            <select asp-for="Edited" class="form-select">
                <option value="No">No</option>
                <option value="Yes">Yes</option>
            </select>
        </div>
        <div class="mb-3">
            <label asp-for="LentTo" class="form-label">Lent to: </label>
            <input asp-for="LentTo" type="text" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Notes" class="form-label">Notes: </label>
            <input asp-for="Notes" type="text" class="form-control" maxlength="25" />
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>

        <span asp-validation-for="Year"></span>
    </form>
</div>
