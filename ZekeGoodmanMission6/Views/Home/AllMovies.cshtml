@{
}
@model List<Movie>

<table class="table table-bordered">
	<thead class="fw-bold">
		<tr>
			<td>Movie Id</td>
			<td>Category</td>
			<td>Title</td>
			<td>Year</td>
			<td>Director</td>
			<td>Rating</td>
			<td>Edited</td>
			<td>Lent To</td>
			<td>CopiedToPlex</td>
			<td>Notes</td>
		</tr>
	</thead>
	@foreach (var item in Model)
	{
		<tbody>
			<tr>
				<td>@item.MovieId</td>
				<td>@item.Category.CategoryName</td>
				<td>@item.Title</td>
				<td>@item.Year</td>
				<td>@item.Director</td>
				<td>@item.Rating</td>
				<td>@item.Edited</td>
				<td>@item.LentTo</td>
				<td>@item.CopiedToPlex</td>
				<td>@item.Notes</td>
				<td><a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@item.MovieId">Edit</a></td>
				<td><a class="btn btn-info" asp-controller="Home" asp-action="Delete" asp-route-id="@item.MovieId">Delete</a></td>
			</tr>
		</tbody>
	}
</table>
